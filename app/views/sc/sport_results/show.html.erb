<h1><%= @section.name %></h1>

<%= form_tag update_multiple_sc_sport_result_entries_path(section_id: @section.id), method: :patch do  %>
  <%= submit_tag "Update", class: primary_button_class, role: "button" %>	
  <%= link_to "Calculate Finalists", calculate_finalists_sc_sport_result_entries_path(section_id: @section.id),
          class: primary_button_class,
          role: "button" %>
  <%= link_to "Submit", submit_sc_sport_result_entries_path(section_id: @section.id),
          class: primary_button_class,
          role: "button" %>
  <%= link_to "Reset", reset_sc_sport_result_entries_path(section_id: @section.id),
          data: { confirm: "Are you sure?" },
          class: danger_button_class,
          role: "button" %>
  <%= link_to "Back", sc_sport_results_path,
          class: primary_button_class,
          role: "button" %>

    <br/>
    <br/>

    <table class="table table-dark table-striped">
      <thead>
        <th>Court</th>
        <th>Team A</th>
        <th>Score A</th>
        <th>Team B</th>
        <th>Score B</th>
      </thead>
      <tbody>
        <%= render @sport_result_entries %>
      </tbody>
    </table>

  <%= submit_tag "Update", class: primary_button_class, role: "button" %>	
  <%= link_to "Calculate Finalists", calculate_finalists_sc_sport_result_entries_path(section_id: @section.id),
          class: primary_button_class,
          role: "button" %>
  <%= link_to "Submit", submit_sc_sport_result_entries_path(section_id: @section.id),
          class: primary_button_class,
          role: "button" %>
  <%= link_to "Reset", reset_sc_sport_result_entries_path(section_id: @section.id),
          data: { confirm: "Are you sure?" },
          class: danger_button_class,
          role: "button" %>
  <%= link_to "Back", sc_sport_results_path,
          class: primary_button_class,
          role: "button" %>
<% end %>

