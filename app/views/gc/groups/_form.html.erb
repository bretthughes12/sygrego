<%= simple_form_for(@group, url: url, html: { method: method }) do |f| %> 
	<%= f.error_notification %>

	<%= f.input :lock_version, :as => :hidden %>
	<%= f.input :coming %>
	<%= f.input :abbr %>
	<%= f.input :name, label: "Group Name" %>
	<%= f.input :short_name, :hint => group_short_name_hint(@group) %>
   	<%= f.input :trading_name, :label => "Church Trading Name" %>
	<%= f.input :address, :label => "Church Postal Address" %>
	<%= f.input :suburb %>
	<%= f.input :postcode %>
	<%= f.input :email %>
	<%= f.input :website %>
	<%= f.input :phone_number %>

	<br/>

	<h2>Tickets</h2>

	<table class="table table-dark table-striped">
		<tr valign="top">
			<td> 
				Tickets will be sent to
			</td>

			<td> 
				<%= @group.ticket_recipient_text  %>
			</td>
		</tr>
	</table>

	<%= f.input :ticket_preference, as: :select, collection: Group::TICKET_PREFERENCES, include_blank: false, :hint => "do you want your participants' tickets to be sent to you, or directly to them?" %>
	<%= f.input :ticket_email %>

	<br/>

	<h2>Group Demographics</h2>

	<%= f.input :denomination %>
	<%= f.input :age_demographic, as: :select, :label => "Age demographic of your team (largest part)", collection: Group::AGE_DEMOGRAPHIC, include_blank: true %>
	<%= f.input :group_focus, as: :select, :label => "Primary focus of your group in attending SYG", collection: Group::GROUP_FOCUS, include_blank: true %>
	<%= f.input :years_attended %>

	<br/>

	<%= f.button :submit %>
<% end %>	
