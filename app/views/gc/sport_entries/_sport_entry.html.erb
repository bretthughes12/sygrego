<tr valign="top" class="<%= sport_entry_display_class(sport_entry) %>">
	<td>
	    <%= h(sport_entry.session_name) %>
	</td>
	
	<td>
	    <%= link_to h(sport_entry.section_name), edit_gc_sport_entry_path(sport_entry) %>
	</td>
	
	<td>
	    <%= h(sport_entry.name) %>
	</td>
	
	<td>
		<%= h(sport_entry.venue_name) %>
	</td>
	 
	<% if @settings.restricted_sports_allocated %>
		<td align="center">
			<%= h(sport_entry.grade.team_size) %>
		</td>
	<% else %>
		<% if sport_entry.grade.entry_limit %> 
			<td align="center">
				<%= h(sport_entry.grade.entry_limit) %>
			</td>
		<% else %> 
			<td align="center">-</td>
		<% end %> 
		
		<td align="center">
			<%= h(sport_entry.grade.sport_entries.count) %>
		</td>
	<% end %>

	<td>
		<%- if should_show_confirm_button(sport_entry) -%>
			<%= link_to "Confirm", confirm_gc_sport_entry_path(sport_entry),
                  method: :patch,
                  class: primary_button_class,
                  role: "button" %>
		<%- end -%>
		<%- if should_show_delete_link(sport_entry) -%>
			<%= link_to "X", gc_sport_entry_path(sport_entry),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: danger_button_class,
                  role: "button" %>
		<%- end -%>
	</td>
</tr>
