<%= simple_form_for(@participant, url: url, html: { method: method }) do |f| %> 
	<%= f.error_notification %>

	<%= f.input :lock_version, as: :hidden %>
	<% unless @group.group_fee_categories.empty? %>
		<%= f.input :group_fee_category_id, as: :select, label: "Fee category", collection: @group.group_fee_categories.order(:description), label_method: :description, include_blank: false %>
	<% end %>
	<%= f.input :amount_paid %>

	<br/>

	<%= f.button :submit %>
<% end %>	
