<% title "Sports Planner for #{h(@group.short_name)}" %>

<h1><%= yield(:title) %></h1>
    
<% if !@participants.empty? %>
    <%= link_to "Download", sports_plan_gc_participants_path(format: :xlsx),
                  class: primary_button_class,
                  role: "button" %>

    <br/>
    <br/>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Sat AM</th>
                <th>Sat PM</th>
                <th>Sat Eve</th>
                <th>Sun AM</th>
                <th>Sun PM</th>
                <th>Sun Eve</th>
            </tr>
        </thead>

        <%= render partial: 'participant_sports', collection: @participants, as: :participant %>
    </table>

    <%= link_to "Download", sports_plan_gc_participants_path(format: :xlsxx),
                  class: primary_button_class,
                  role: "button" %>
<% end %>
