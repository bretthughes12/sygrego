<% title "Editing orientation detail: #{@orientation_detail.name}" %>

<h1><%= yield(:title) %></h1>

<%= render partial: "form", locals: { 
                              url: admin_orientation_detail_path(@orientation_detail), 
                              method: :patch } %>

<br/>
<br/>

<%= link_to "Back", admin_orientation_details_path,
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Details", admin_orientation_detail_path(@orientation_detail),
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Destroy", admin_orientation_detail_path(@orientation_detail),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: danger_button_class,
                  role: "button" %>
