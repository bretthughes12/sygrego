<% title "Editing #{@participant.name}" %>

<h1><%= yield(:title) %></h1>

<%= render partial: "form", locals: { 
                              url: admin_participant_path(@participant), 
                              method: :put } %>

<br/>

<%= link_to "Back", admin_participants_path,
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Details", admin_participant_path(@participant),
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Destroy", admin_participant_path(@participant),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: danger_button_class,
                  role: "button" %>
