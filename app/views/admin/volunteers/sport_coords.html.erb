  <thead>
    <tr>
      <th align="left">Sport / Grade / Section</th>
      <th align="left">Session</th>
      <th align="left">Name</th>
      <th align="left">Mobile Number</th>
      <th align="left">Actions</th>
    </tr>
  </thead>
	    
