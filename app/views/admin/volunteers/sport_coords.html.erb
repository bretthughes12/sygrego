</table>

<%= link_to "Saturday", sat_coords_admin_volunteers_path,
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Sunday", sun_coords_admin_volunteers_path,
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Download Notes", coord_notes_admin_volunteers_path(format: :xlsx),
                  class: primary_button_class,
                  role: "button" %>

<%= legend_box [{:name => "Not collected yet", :class => "table-dark"},
