<%= simple_form_for(@volunteer, url: url, html: { method: method }) do |f| %> 
	<%= f.error_notification %>

	<%= f.input :volunteer_type_id, as: :select, :collection => @volunteer_types %>

	<%= f.input :description %>
	<%= f.input :session_id, as: :select, :collection => @sessions, :include_blank => true  %>

	<%= f.input :participant_id, as: :select, :label => "Volunteer", :collection => @participants_with_group_name, :include_blank => true %>

	<%= f.input :email %>
	<%= f.input :mobile_number %>
	<%= f.input :t_shirt_size, :as => :select, :collection => Volunteer::T_SHIRT_SIZES, :include_blank => true if should_display_t_shirt_flag %>

	<%= f.button :submit %>
<% end %>	
