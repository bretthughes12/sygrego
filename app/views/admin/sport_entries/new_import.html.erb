<% title "Upload sport entries" %>

<h1><%= yield(:title) %></h1>

<p>Import file must be in '.csv' format, with columns the same as the download:</p>
<ul>
  <li>Type</li>
  <li>Session</li>
  <li>Grade</li>
  <li>Section</li>
  <li>Preferred</li>
  <li>Group</li>
  <li>Venue</li>
  <li>Status</li>
  <li>Name</li>
  <li>Team #</li>
  <li>Group #</li>
  <li>Team Size</li>
  <li>Number of Participants</li>
  <li>Captain</li>
  <li>Participants</li>
</ul>

<%= simple_form_for(@sport_entry, url: import_admin_sport_entries_path) do |f| %> 
	<%= f.error_notification %>

	<%= f.input :file, as: :file, label: "Upload file" %>

    <br/>

	<%= f.button :submit, "Upload" %>
<% end %>	

<br/>

<%= link_to "Back", admin_sport_entries_path,
                  class: primary_button_class,
                  role: "button" %>
