Type,Session,Grade,Section,Preferred,Group,Venue,Status,Name,Team #,Group #,Team Size,Number of Participants,Captain,Participants
<%= CSV.generate do |csv|
  @sport_entries.each do |e|
  	participants = e.participants.clone
	if e.captaincy.nil?
		captain_name = nil
	else
	  	captain_name = e.captaincy.name
	  	participants = participants.to_a.delete_if { |p| p == e.captaincy }
	end

	players = []
	players = participants.collect do |p|
		p.name
	end
	csv << [ e.grade.sport.classification, 
			 e.session_name, 
			 e.grade.name,  
			 e.section_name,  
			 e.preferred_section_name,
			 e.group.short_name,
			 e.venue_name,
			 e.status,
			 e.name,
			 e.team_number,
			 e.group_number,
			 e.grade.team_size,
			 e.participants.size,
			 captain_name ] + players
  end
end.html_safe %>
