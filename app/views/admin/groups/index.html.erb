<% title "Listing groups" %>

<h1><%= yield(:title) %></h1>

<%= search_box search_admin_groups_path, "Search" %>
<%= yield(:search_box)%>

<%= link_to "New group", new_admin_group_path,
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Download", admin_groups_path(format: :xlsx),
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Upload", new_import_admin_groups_path,
                  class: danger_button_class,
                  role: "button" %>

<br/>
<br/>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Abbr</th>
      <th>Full Name</th>
      <th>Short Name</th>
    </tr>
  </thead>

	<%= render @groups %>
</table>

<%= link_to "New group", new_admin_group_path,
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Download", admin_groups_path(format: :xlsx),
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Upload", new_import_admin_groups_path,
                  class: danger_button_class,
                  role: "button" %>

<%= legend_box [{:name => "Onsite", :class => "table-primary"},
					{:name => "Offsite", :class => "table-warning"},
					{:name => "Not Coming", :class => "table-secondary"},
					{:name => "Stale", :class => "table-dark"}] %>
