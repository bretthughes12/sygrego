<%- headings = %w{Name Active Classification MaxIndivGrp MaxTeamGrp MaxIndiv Bonus CourtName BlowoutRule ForfeitScore TieBreak AllowNeg PointName } -%>
<%= headings.join(',') %>
<%= CSV.generate do |csv|
    @sports.each do |sport|
	    line =  [  
		          sport.name,
		          sport.active,
		          sport.classification,
		          sport.max_indiv_entries_group,
		          sport.max_team_entries_group,
		          sport.max_entries_indiv,
		          sport.bonus_for_officials,
		          sport.court_name,
     			  sport.blowout_rule,
				  sport.forfeit_score,
				  sport.ladder_tie_break,
				  sport.allow_negative_score,
				  sport.point_name
                ]

    csv << line
  end
end.html_safe %>