<%= simple_form_for(@volunteer_type, url: url, html: { method: method }) do |f| %> 
	<%= f.error_notification %>

	<%= f.input :name, label: "Type" %>
	<%= f.input :database_code, label: "Type code" %>
	<%= f.input :active %>
	<%= f.input :age_category, as: :select, collection: VolunteerType::AGE_CATEGORIES, include_blank: false %>
	<%= f.input :sport_related %>
	<%= f.input :t_shirt, :label => "Do volunteers get a T-Shirt?" %>
	<%= f.input :description, :label => "Tool Tip" %>

	<h3>Volunteer Email</h3>

	<%= f.input :send_volunteer_email, label: "Does this volunteer type get a volunteer email?" %>
	<%= f.input :cc_email, label: "Email address of committee member to be cc'ed" %>
	<%= f.input :email_template, as: :select, collection: VolunteerType::EMAIL_TEMPLATES, include_blank: false %>

	<%= f.input :instructions, as: :rich_text_area,
				label: "Volunteer instructions",
				hint: "Instructions to be sent to volunteers by email prior to the event" %>

	<%= f.button :submit %>
<% end %>	
