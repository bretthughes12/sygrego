<tr valign="top" class="<%= payment_display_class(payment) %>">
	<td> 
		<%= payment.date_paid %>
	</td>

	<td> 
		<%= payment.group.short_name %>
	</td>
	
	<td> 
        <%= link_to number_to_currency(payment.amount), edit_admin_payment_path(payment) %>
	</td>
	
	<td> 
		<% unless payment.reference.blank? %>
			<%= payment.reference %>
		<% else %>
			<i><%= payment.invoice_number %></i>
		<% end %>
	</td>

	<td>
		<% unless payment.reconciled %>
			<%= link_to "Reconcile", reconcile_admin_payment_path(payment),
					method: :patch,
					class: primary_button_class,
					role: "button" %>
		<% end %>
	</td>
</tr>
