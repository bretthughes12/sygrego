<%= simple_form_for(@payment, url: url, html: { method: method }) do |f| %> 
	<%= f.error_notification %>

	<%= f.input :group_id, as: :select, collection: Group.all.order(:short_name).map { |g| [g.short_name_with_status, g.id] } %>
	<%= f.input :paid_at, as: :date %>
	<%= f.input :invoice_type, as: :select, collection: Payment::INVOICE_TYPES, include_blank: false %>
	<%= f.input :amount %>
	<%= f.input :paid %>
	<%= f.input :reconciled %>
	<%= f.input :reference, label: "Payment Reference" %>

	<br/>

	<%= f.button :submit %>
<% end %>	
