<% title "Listing payments" %>

<h1><%= yield(:title) %></h1>

<%= link_to "New payment", new_admin_payment_path,
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Download", admin_payments_path(format: :csv),
                  class: primary_button_class,
                  role: "button" %>

<br/>
<br/>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Date</th>
      <th>Group</th>
      <th>Amount</th>
      <th>Reconciled</th>
    </tr>
  </thead>

	<%= render @payments %>
</table>

<%= link_to "New payment", new_admin_payment_path,
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Download", admin_payments_path(format: :csv),
                  class: primary_button_class,
                  role: "button" %>

<%= legend_box [{:name => "Reconciled", :class => "table-primary"},
					{:name => "Unreconciled", :class => "table-warning"}] %>
