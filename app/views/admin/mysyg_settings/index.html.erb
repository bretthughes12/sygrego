<% title "Listing group MySYG settings" %>

<h1><%= yield(:title) %></h1>

<%= search_box search_admin_mysyg_settings_path, "Search" %>
<%= yield(:search_box)%>

<%= link_to "Download", admin_mysyg_settings_path(format: :xlsx),
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Upload", new_import_admin_mysyg_settings_path,
                  class: danger_button_class,
                  role: "button" %>

<br/>
<br/>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Abbr</th>
      <th>Short Name</th>
      <th>Open</th>
      <th>Approve Option</th>
    </tr>
  </thead>

	<%= render @mysyg_settings %>
</table>

<%= link_to "Download", admin_mysyg_settings_path(format: :xlsx),
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Upload", new_import_admin_mysyg_settings_path,
                  class: danger_button_class,
                  role: "button" %>

<%= legend_box [{:name => "Open", :class => "table-primary"},
					{:name => "Enabled", :class => "table-warning"},
					{:name => "Not Enabled", :class => "table-dark"}] %>
