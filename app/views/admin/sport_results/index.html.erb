<h1>Sport results</h1>

<%= link_to "Upload", new_import_admin_sport_result_entries_path,
        class: danger_button_class,
        role: "button" %>

<br/>
<br/>

<table class="table table-dark">
  <thead>
    <th>Session</th>
    <th>Section</th>
    <th />
  </thead>
  <tbody>
    <% @sections.each do |section| %>
      <tr class="<%= results_display_class(section) %>">
        <td><%= section.session.name %></td>
        <td><%= section.name %></td>
        <td>
          <%= link_to "Results", admin_sport_result_path(section.id),
                  class: primary_button_class,
                  role: "button" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= legend_box [{name: "Submitted", class: "table-primary"},
				  {name: "Started", class: "table-danger"},
          {name: "Untouched", class: "table-warning"}] %>
