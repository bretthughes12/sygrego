<% title "Listing group orientation details" %>

<h1><%= yield(:title) %></h1>

<br/>

<%= form_tag update_multiple_orientations_admin_event_details_path, method: :patch do  %>
  <table class="table table-dark">
    <thead>
      <tr>
        <th>Abbr</th>
        <th>Short Name</th>
        <th>Orientation Details</th>
      </tr>
    </thead>

    <%= render partial: 'orientation_detail', collection: @event_details, as: :event_detail %>
  </table>

  <%= submit_tag "Update", class: primary_button_class, role: "button" %>	
<% end %>

<%= legend_box [{:name => "Onsite", :class => "table-primary"},
					{:name => "Offsite", :class => "table-warning"}] %>
