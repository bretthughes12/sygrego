<% title "Listing group event details" %>

<h1><%= yield(:title) %></h1>

<%= search_box search_admin_event_details_path, "Search" %>
<%= yield(:search_box)%>

<%= link_to "Download", admin_event_details_path(format: :csv),
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Upload", new_import_admin_event_details_path,
                  class: danger_button_class,
                  role: "button" %>

<br/>
<br/>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Abbr</th>
      <th>Short Name</th>
      <th>Estimated Numbers</th>
      <th>Coming</th>
      <th>Sports Entries</th>
    </tr>
  </thead>

	<%= render @event_details %>
</table>

<%= link_to "Download", admin_event_details_path(format: :csv),
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Upload", new_import_admin_event_details_path,
                  class: danger_button_class,
                  role: "button" %>

<%= legend_box [{:name => "Onsite", :class => "table-primary"},
					{:name => "Offsite", :class => "table-warning"},
					{:name => "Not Coming", :class => "table-dark"}] %>
